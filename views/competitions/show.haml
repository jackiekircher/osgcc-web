%section.competition
  %header
    %h1 #{@competition.name}

    %p.schedule<
      #{@competition.start.strftime('%-m/%-d/%y %l:%M%P')} - #{@competition.end.strftime('%-m/%-d/%y %l:%M%P %Z')}

  - if @competition.teams.any?

    %div#teams
      %h2 Registered Teams
      %ul
        - @competition.teams.each do |team|
          %li.team<
            %h3>
              = team.name
            Members:
            %ul.team-members>
              - team.members.each do |member|
                %li.member<
                  = member.username

  %footer
    - if logged_in?
      %a.button{:href =>url("/competitions/#{@competition.id}/teams/new")}
        Create Team
      - if authorized?
        %a.button{:href => url("/competitions/#{@competition.id}/edit")}
          Edit

