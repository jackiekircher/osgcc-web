%section.competition
  %h1 #{@competition.name}

  %p
    #{formatted_date(@competition.start)}
    to
    #{formatted_date(@competition.end)}
  %footer
    - if logged_in?
      %a.button{:href =>url("/competitions/#{@competition.id}/teams/new")}
        Create Team
      - if authorized?
        %a.button{:href => url("/competitions/#{@competition.id}/edit")}
          Edit
