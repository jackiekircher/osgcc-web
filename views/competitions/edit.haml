%form{:method => 'post',
      :action => url("/competitions/#{@competition._id}"),
      :id => "competition"}
  %div.clearfix
    %input#comp-name{:name => 'comp_name',
                     :size => 30,
                     :type => 'text',
                     :value => @competition.name,
                     :placeholder => 'New Competition Name',
                     :required    => 'required'}
  %div.clearfix
    %input.time{:type     => 'date',
                :name     => 'start_date',
                :value    => @competition.form_start_date,
                :required => 'required'}

    %input.time{:type     => 'time',
                :name     => 'start_time',
                :value    => @competition.form_start_time,
                :required => 'required'}

    to

    %input.time{:type     => 'date',
                :name     => 'end_date',
                :value    => @competition.form_end_date,
                :required => 'required'}

    %input.time{:type     => 'time',
                :name     => 'end_time',
                :value    => @competition.form_end_time,
                :required => 'required'}

  %input#submit{:type => 'submit', :value => 'Update Competition'}
