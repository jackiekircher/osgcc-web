%form{:method => 'post', :action => url("/competitions/#{@competition._id}"),
      :id => "competition"}
  %div.clearfix
    %input#comp-name{:name => 'comp_name',
                     :size => 30,
                     :type => 'text',
                     :value => @competition.name}
  %div.clearfix
    %input.time{:type  => 'text',
                :name  => 'start_date',
                :value => @competition.start_date.strftime('%Y-%m-%d')}
    %input.time{:type  => 'text',
                :name  => 'start_time',
                :value => @competition.start_date.strftime('%l:%M%P')}
    to
    %input.time{:type  => 'text',
                :name  => 'end_date',
                :value => @competition.end_date.strftime('%Y-%m-%d')}
    %input.time{:type  => 'text',
                :name  => 'end_time',
                :value => @competition.end_date.strftime('%l:%M%P')}
  %input#submit{:type => 'submit', :value => 'Update Competition'}
