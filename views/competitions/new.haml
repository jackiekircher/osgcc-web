%form{:method => 'post',
      :action => url('/competitions'),
      :id => "competition"}
  %div.clearfix
    %input#comp-name{:name  => 'comp_name',
                     :size  => 30,
                     :type  => 'text',
                     :value => @competition.name,
                     :placeholder => 'New Competition Name',
                     :required    => 'required'}
  %div.clearfix
    %input.time{:type     => 'date',
                :name     => 'start_date',
                :value    => date_of(@competition.start),
                :required => 'required'}

    %input.time{:type     => 'time',
                :name     => 'start_time',
                :value    => time_of(@competition.start),
                :required => 'required'}

    to

    %input.time{:type     => 'date',
                :name     => 'end_date',
                :value    => date_of(@competition.end),
                :required => 'required'}

    %input.time{:type     => 'time',
                :name     => 'end_time',
                :value    => time_of(@competition.end),
                :required => 'required'}

    %select#timezone{:name => "timezone"}
      - @zones.each do |timezone, label|
        - if @competition.timezone.name == timezone
          %option{:value => timezone, :selected => "selected"}
            = label
        - else
          %option{:value => timezone}
            = label

  %input#submit{:type => 'submit', :value => 'Create Competition'}
