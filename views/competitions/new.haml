%form{:method => 'post',
      :action => url('/competitions'),
      :id => "competition"}
  %div.clearfix
    %input#comp-name{:name  => 'comp_name',
                     :size  => 30,
                     :type  => 'text',
                     :value => @competition.name,
                     :placeholder => 'New Competition Name',
                     :required    => 'required'}
  %div.clearfix
    %input.time{:type    => 'date',
                :name    => 'start_date',
                :value   => @competition.form_start_date,
                :requred => 'required'}

    %input.time{:type     => 'time',
                :name     => 'start_time',
                :value    => @competition.form_start_time,
                :required => 'required'}

    to

    %input.time{:type     => 'date',
                :name     => 'end_date',
                :value    => @competition.form_end_date,
                :required => 'required'}

    %input.time{:type     => 'time',
                :name     => 'end_time',
                :value    => @competition.form_end_time,
                :required => 'required'}

    %select#timezone{:name => "timezone"}
      - @zones.each do |timezone|
        %option{:value => timezone.identifier}
          = timezone.to_option

  %input#submit{:type => 'submit', :value => 'Create Competition'}
