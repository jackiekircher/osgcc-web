!!!
%html
  %head
    %title OSGCC
    %link{:rel  => 'stylesheet',
      :href =>'http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css'}
    %script{:type => 'text/javascript',
      :src => 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js'}
    %script{:type => 'text/javascript',
      :src => 'http://cachedcommons.org/cache/datejs/1.0.0/javascripts/date-min.js'}
    %script{:type => 'text/javascript',
      :src => 'http://twitter.github.com/bootstrap/1.4.0/bootstrap-dropdown.js'}
    %script{:type => 'text/javascript',
      :src => 'http://twitter.github.com/bootstrap/1.4.0/bootstrap-modal.js'}
    :javascript
      $('.nav').dropdown();

    :css
      li.complete {
        list-style-image: url(/images/green_checkmark.gif);
      }
      li.inprogress {
        list-style-image: url(/images/loading-spinner.gif);
      }
      body {
        padding-top: 60px
      }

      /* competitions */
      input.comp-name {
        height: 60px;
        font-size: 60px;
        line-height: 68px;
      }

  %body
    = haml :'home/_top_bar'
    .container-fluid
      = haml :'home/_sidebar'
      .content
        = yield

